@model IEnumerable<MVCHomeWork.Models.客戶資料>
    <table class="table">
        <tr>

            <th>
                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.客戶名稱)')" value="@Html.DisplayNameFor(model => model.客戶名稱)">
            </th>
            <th>

                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.統一編號)')" value="@Html.DisplayNameFor(model => model.統一編號)">
            </th>
            <th>
                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.電話)')" value="@Html.DisplayNameFor(model => model.電話)">
            </th>
            <th>
                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.傳真)')" value="@Html.DisplayNameFor(model => model.傳真)">
            </th>
            <th>
                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.地址)')" value="@Html.DisplayNameFor(model => model.地址)">
            </th>
            <th>
                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.Email)')" value="@Html.DisplayNameFor(model => model.Email)">
            </th>
            <th>
                <input type="button" class="btn btn-link" onclick="sortdata('@Html.DisplayNameFor(model => model.客戶分類)')" value="@Html.DisplayNameFor(model => model.客戶分類)">
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.統一編號)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.傳真)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.地址)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶分類, "CustCardType")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
        @if (Model.Count() <= 0) {
            <tr>
                <td colspan="8" class="label label-success">No Records</td>
            </tr>
        }
    </table>
<script type="text/javascript">
    function sortdata(sortCol) {
        if ($("#od").val() == sortCol) {
            if ($("#st").val() == "D") {
                $("#st").val("A");
            } else {
                $("#st").val("D");
            }
        } else {
            $("#od").val(sortCol);
            $("#st").val("A");
        }

        $("#btnSerch").click();
    }
</script>    
