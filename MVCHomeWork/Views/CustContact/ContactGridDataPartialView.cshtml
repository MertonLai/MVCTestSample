@model IEnumerable<MVCHomeWork.Models.客戶聯絡人>
<table class="table">
    <tr>
        <th>
            <input type="button" class="btn btn-link" onclick="sortCTdata('@Html.DisplayNameFor(model => model.職稱)')" value="@Html.DisplayNameFor(model => model.職稱)">
        </th>
        <th>
            <input type="button" class="btn btn-link" onclick="sortCTdata('@Html.DisplayNameFor(model => model.姓名)')" value="@Html.DisplayNameFor(model => model.姓名)">
        </th>
        <th>
            <input type="button" class="btn btn-link" onclick="sortCTdata('@Html.DisplayNameFor(model => model.Email)')" value="@Html.DisplayNameFor(model => model.Email)">
        </th>
        <th>
            <input type="button" class="btn btn-link" onclick="sortCTdata('@Html.DisplayNameFor(model => model.手機)')" value="@Html.DisplayNameFor(model => model.手機)">
        </th>
        <th>
            <input type="button" class="btn btn-link" onclick="sortCTdata('@Html.DisplayNameFor(model => model.電話)')" value="@Html.DisplayNameFor(model => model.電話)">
        </th>
        <th>
            <input type="button" class="btn btn-link" onclick="sortCTdata('@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)')" value="@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)">
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
